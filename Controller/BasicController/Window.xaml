<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="200" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox Name="Left" Margin="5" Height="25"/>
        <TextBox Grid.Row="1" Name="Right" Margin="5" Height="25"/>
        <TextBlock Grid.Row="2" Name="Result" Margin="5" Height="25"/>
        <StackPanel Grid.Row="3" Orientation="Horizontal" Grid.ColumnSpan="2">
            <Button Content="+" Name="Add" Width="80" Height="25" Margin="5"/>
            <Button Content="-" Name="Subtract" Width="80" Height="25" Margin="5"/>
            <Button Content="C" Name="Clear" Width="80" Height="25" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
