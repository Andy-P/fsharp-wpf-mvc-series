<Window x:Class="SimpleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CSharp" Height="200" Width="300">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBox Name="LHS" Margin="5" Height="25"/>
            <TextBox Grid.Row="1" Name="RHS" Margin="5" Height="25"/>
            <TextBlock Grid.Row="2" Name="Result" Margin="5" Height="25" x:FieldModifier="public"/>
            <StackPanel Grid.Row="3" Orientation="Horizontal" Grid.ColumnSpan="2" >
                <Button Content="Add" Name="Add" Width="120" Height="25" Margin="5" x:FieldModifier="public"/>
                <Button Content="Clear" Name="Clear" Width="120" Height="25" Margin="5" x:FieldModifier="public"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
