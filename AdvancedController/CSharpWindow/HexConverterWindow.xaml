<Window x:Class="HexConverterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HexConverterWindow" Height="200" Width="300">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5">
            <Label Content="Hex Value"/>
            <TextBox Name="Value" Width="100" x:FieldModifier="public"/>
        </StackPanel>
        <Rectangle Height="50"/>
        <StackPanel Orientation="Horizontal">
            <Button Name="OK" Content="OK" Width="120" Height="25" x:FieldModifier="public" Margin="10,0"/>
            <Button Name="Cancel" Content="Cancel" Width="120" Height="25" x:FieldModifier="public"/>
        </StackPanel>
    </StackPanel>
</Window>
