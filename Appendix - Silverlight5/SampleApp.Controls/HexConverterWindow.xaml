<controls:ChildWindow x:Class="SampleApp.HexConverterWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Title="HexConverterWindow" Height="150" Width="300">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="0" >
            <TextBlock Text="Hex Value"/>
            <TextBox Name="Value" Width="100" x:FieldModifier="public"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="5, 10" Grid.Row="2">
            <Button Name="OK" Content="OK" Width="120" Height="25" x:FieldModifier="public" Margin="10,0"/>
            <Button Name="Cancel" Content="Cancel" Width="120" Height="25" x:FieldModifier="public"/>
        </StackPanel>
    </Grid>
</controls:ChildWindow>